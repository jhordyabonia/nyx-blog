<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <!-- configuracion de la coleccion para el dataProvider-->
                <item name="post_listing_data_source" xsi:type="string">NYX\Blog\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <!-- configuracion de la coleccion para el dataProvider-->
                <item name="comment_listing_data_source" xsi:type="string">NYX\Blog\Model\ResourceModel\Comment\Grid\Collection</item>
            </argument>
        </arguments>
    </type>


    <preference for="NYX\Blog\Api\Data\PostSearchResultsInterface"
                type="Magento\Framework\Api\SearchResults" />

    <preference for="NYX\Blog\Api\Data\PostInterface"
                type="NYX\Blog\Model\Post"/>

    <preference for="NYX\Blog\Api\PostRepositoryInterface"
                type="\NYX\Blog\Model\PostRepository"/>


    <preference for="NYX\Blog\Api\Data\CommentSearchResultsInterface"
                type="Magento\Framework\Api\SearchResults" />

    <preference for="NYX\Blog\Api\Data\CommentInterface"
                type="NYX\Blog\Model\Comment"/>

    <preference for="NYX\Blog\Api\CommentRepositoryInterface"
                type="\NYX\Blog\Model\CommentRepository"/>

    <virtualType name="AppearanceYESNO" type="Magento\Framework\Data\OptionSourceInterface">
        <arguments>
            <argument name="optionsSize" xsi:type="string">large</argument>
            <argument name="optionsData" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="value" xsi:type="string">0</item>
                    <item name="title" xsi:type="string" translate="true">Inactive</item>
                </item>
                <item name="1" xsi:type="array">
                    <item name="value" xsi:type="string">1</item>
                    <item name="title" xsi:type="string" translate="true">Active</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
</config>
